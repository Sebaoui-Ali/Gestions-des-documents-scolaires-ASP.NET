@model Document_Management_Application.ViewModels.EtudiantFormViewModel
@{
    ViewBag.Title = "Create";
}

<section style="background-image: url(../../Content/images/hero-4-bg-img.png)" class="section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="text-center mb-5">
                    <h2 class="">Ajouter une demande</h2>
                </div>
            </div>
        </div>
        @if (Model !=null )
        {
    <div class="alert alert-warning" role="alert">
        @Model.erreur
    </div>}

        <div class="row align-items-center justify-content-center">

            <div class="col-lg-12 offset-lg-1">
                <h4 class="line-height-1_4 mb-4">Informations</h4>
                <div class="custom-form mt-4 mt-lg-0">
                    <div id="message"></div>

                    @using (Html.BeginForm("SaveRequest", "Document"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    @Html.LabelFor(m => m.Nom, new { @class = "text-muted" })<span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Nom, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    @Html.LabelFor(m => m.Prenom, new { @class = "text-muted" })<span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Prenom, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    @Html.LabelFor(m => m.Email, new { @class = "text-muted" })<span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    @Html.LabelFor(m => m.Cin, new { @class = "text-muted" })<span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.Cin, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Cin, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    @Html.LabelFor(m => m.NumApogee, new { @class = "text-muted" })<span class="text-danger">*</span>
                                    @Html.TextBoxFor(m => m.NumApogee, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.NumApogee, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group app-label">
                                    <label for="type" class="text-muted">Type De demande <span class="text-danger">*</span></label>
                                    <select id="type" name="type" class="form-control" required>
                                        <option>Attestation de reussite</option>
                                        <option>Convention de stage</option>
                                        <option>Certificat</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" id="submit" name="send" class="btn btn-primary">Envoyer</button>
                                <div id="simple-msg"></div>
                            </div>
                        </div>}


                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    }


