@{
    ViewBag.Title = "Home Page";
}



<!-- Hero Start -->
<section class="hero-3-bg position-relative bg-soft-primary" id="home">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="text-center">
                    <h1 class="hero-3-title text-dark line-height-1_4">Demander un document officiel n'est plus difficile</h1>
                    <p class="text-muted mb-4 pb-3">Maintenant vous pouvez demander un document et le recuperer avec une seule clique </p>
                    @Html.ActionLink("Creer une demande", "Create", "Document", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
    <div class="hero-bottom-shape">
        <img src="~/Content/images/hero-3-bottom-img.png" alt="" class="img-fluid d-block mx-auto">
    </div>
</section>
<!-- Hero End -->

<!-- Services Start -->
<section class="section bg-light" id="services">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="text-center mb-5">
                    <h2 class="">Les etapes</h2>
                    <P class="text-muted">La creation d'un document suit les etapes suivantes:</P>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card service-box text-center p-4">
                    <div class="service-icon-bg mx-auto avatar-xxl p-4" style="background-image: url(images/service-icon-bg.png)">
                        <div class="service-box-icon justify-content-center">
                            <img src="~/Content/images/services-icon/icon-2.png" alt="" class="img-fluid d-block">
                        </div>
                    </div>
                    <h4 class="service-title mt-4 mb-3 f-18">Creation une demande</h4>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-box text-center p-4">
                    <div class="service-icon-bg mx-auto avatar-xxl p-4" style="background-image: url(images/service-icon-bg.png)">
                        <div class="service-box-icon justify-content-center">
                            <img src="~/Content/images/services-icon/icon-2.png" alt="" class="img-fluid d-block">
                        </div>
                    </div>
                    <h4 class="service-title mt-4 mb-3 f-18">Traitement de la damande et Preparation du document  </h4>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card service-box text-center p-4">
                    <div class="service-icon-bg mx-auto avatar-xxl p-4" style="background-image: url(images/service-icon-bg.png)">
                        <div class="service-box-icon justify-content-center">
                            <img src="~/Content/images/services-icon/icon-2.png" alt="" class="img-fluid d-block">
                        </div>
                    </div>
                    <h4 class="service-title mt-4 mb-3 f-18">Envoie du document</h4>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Services End -->


